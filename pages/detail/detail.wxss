.detail-page { height: 100vh; background: #fff; position: relative; }

.back-nav {
  position: fixed; left: 40rpx; z-index: 1000;
  font-size: 24rpx;
  padding: 10rpx 20rpx; border-radius: 40rpx;
}

.hero-image { width: 100%; height: 75vh; }

.detail-content { padding: 40rpx; margin-top: -40rpx; background: #fff; border-radius: 40rpx 40rpx 0 0; }
.meta .tag { font-size: 20rpx; color: #999; letter-spacing: 2rpx; }
.meta .title { font-size: 48rpx; display: block; margin-top: 10rpx; }
.desc { font-size: 26rpx; color: #666; margin: 40rpx 0; line-height: 1.6; }

.g-img { width: 100%; margin-bottom: 20rpx; border-radius: 8rpx; }

/* 灵动岛胶囊布局：居中、宽度收窄、不贴边 */
.capsule-bar {
  position: fixed;
  bottom: 60rpx; /* 悬浮高度 */
  right: 2%; transform: translateX(-50%);
  width: 78%; height: 120rpx;
  background: #1a1a1a;
  border-radius: 100rpx;
  display: flex; align-items: center; justify-content: space-between;
  padding: 0 10rpx;
  box-shadow: 0 20rpx 40rpx rgba(0,0,0,0.3);
  z-index: 999;
  margin-bottom: env(safe-area-inset-bottom); /* 关键适配 */
}

.left-actions { flex: 1; display: flex; justify-content: space-around; }
.c-btn { 
  background: transparent !important; padding: 0 !important; margin: 0 !important;
  display: flex; flex-direction: column; align-items: center; width: 80rpx !important;
}
.c-icon { font-size: 36rpx; color: #fff; margin-bottom: 4rpx; }
.c-icon.active { color: #ff4d4f; }
.c-txt { font-size: 18rpx; color: #888; }

.right-action {
  background: #fff; color: #000;
  height: 100rpx; padding: 0 40rpx;
  border-radius: 50rpx;
  font-size: 24rpx; font-weight: bold;
  display: flex; align-items: center;
  margin-right: 10rpx;
}