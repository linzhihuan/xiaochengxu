/* 复用全局变量 */
.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 80rpx;
  padding-top: 40rpx;
}
.avatar-box {
  width: 120rpx; height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 30rpx;
  box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.05);
}
.avatar { width: 100%; height: 100%; }
.avatar-placeholder {
  width: 100%; height: 100%;
  background: #000; color: #fff;
  display: flex; align-items: center; justify-content: center;
  font-size: 24rpx; font-weight: bold;
}
.user-info { display: flex; flex-direction: column; }
.nickname { font-size: 40rpx; color: #000; font-weight: bold; }
.user-desc { font-size: 22rpx; color: #999; margin-top: 6rpx; }

.section-title { display: flex; align-items: center; margin-bottom: 30rpx; }
.line { height: 1px; background: #eee; flex: 1; margin-left: 30rpx; margin-bottom: 25rpx;}

/* Grid 布局 */
.fav-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}
.fav-item {
  background: #fff;
  margin-bottom: 20rpx;
}
.fav-img {
  width: 100%; height: 260rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}
.fav-meta { display: flex; flex-direction: column; }
.fav-tag { font-size: 18rpx; color: #999; letter-spacing: 1px; margin-bottom: 4rpx; text-transform: uppercase; }
.fav-title { font-size: 26rpx; color: #333; font-weight: 500; }

.empty-state {
  text-align: center; color: #ccc; margin-top: 100rpx; font-size: 24rpx;
}
.mt-4 { margin-top: 30rpx; }