.hero-container {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background: #fff;
}
.hero-bg {
  width: 100%;
  height: 85%; 
  position: absolute;
  top: 0;
  left: 0;
  filter: grayscale(20%);
}
.hero-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50%;
  background: linear-gradient(to top, #ffffff 40%, rgba(255,255,255,0.8) 70%, transparent 100%);
  pointer-events: none;
}
.top-bar {
  position: absolute;
  top: 100rpx;
  left: 0;
  width: 100%;
  padding: 0 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 10;
}
.logo { font-size: 40rpx; font-weight: bold; letter-spacing: 4rpx; font-family: 'Times New Roman', serif; }
.year { font-size: 20rpx; color: #999; letter-spacing: 2rpx; }

.content-box {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 0 50rpx 150rpx 50rpx; 
  z-index: 20;
}
.divider { width: 60rpx; height: 4rpx; background: #000; margin: 40rpx 0; }
.desc { font-size: 26rpx; color: #666; display: block; max-width: 500rpx; }

.btn-group { display: flex; gap: 30rpx; margin-top: 60rpx; }
.btn-expand { flex: 1; }
.btn-icon { width: 120rpx; font-size: 40rpx; }
.icp-area {
  margin-top: 60rpx;
  text-align: center;
  border-top: 1px solid rgba(0,0,0,0.05); 
  padding-top: 20rpx;
}

.icp-text {
  display: block;
  font-size: 18rpx; 
  color: #ccc;      
  line-height: 1.5;
  font-weight: 300;
  letter-spacing: 1px;
}