.hero-container {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background: #fff;
}

/* 轮播图保持全屏 */
.hero-swiper {
  width: 100%;
  height: 100vh;
  position: absolute;
  top: 0;
  left: 0;
}

.hero-img {
  width: 100%;
  height: 100%;
  /* 稍微增加亮度，因为遮罩会变浅 */
  filter: grayscale(10%) brightness(0.95);
}

.zoom-animation {
  animation: kenburns 10s ease-in-out infinite alternate;
}

@keyframes kenburns {
  from { transform: scale(1.0); }
  to { transform: scale(1.1); }
}

/* 调整遮罩：降低高度，让图片中段更清晰 */
.hero-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 45%; /* 从 60% 降为 45% */
  background: linear-gradient(to top, #ffffff 30%, rgba(255,255,255,0.8) 60%, transparent 100%);
  pointer-events: none;
  z-index: 5;
}

.top-bar {
  position: absolute;
  top: 100rpx;
  left: 0;
  width: 100%;
  padding: 0 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 10;
  box-sizing: border-box;
}

.logo { 
  font-size: 40rpx; 
  color: #fff; 
  font-weight: bold; 
  letter-spacing: 4rpx; 
  text-shadow: 0 2rpx 10rpx rgba(0,0,0,0.3);
}

.year { 
  font-size: 20rpx; 
  color: rgba(255,255,255,0.9); 
  letter-spacing: 2rpx; 
  text-shadow: 0 2rpx 10rpx rgba(0,0,0,0.3);
}

/* 核心调整：内容区域大幅下沉 */
.content-box {
  position: absolute;
  bottom: 0; /* 贴底 */
  left: 0;
  width: 100%;
  /* 减少底部 padding，让整体更紧凑，不遮挡图片主体 */
  padding: 0 50rpx calc(60rpx + env(safe-area-inset-bottom)) 50rpx;
  z-index: 20;
  box-sizing: border-box;
}

.text-group {
  margin-bottom: 40rpx; /* 减少间距 */
}

.text-xxl { 
  font-size: 80rpx; /* 稍微调小字号 */
  color: #000; 
  font-weight: 800; 
  line-height: 1.0;
  letter-spacing: -2rpx;
}
.font-serif { font-family: "Georgia", serif; font-style: italic; }

.divider { width: 50rpx; height: 4rpx; background: #000; margin: 30rpx 0; }
.desc { font-size: 24rpx; color: #666; display: block; line-height: 1.5; max-width: 80%; }

.btn-group { 
  display: flex; 
  gap: 20rpx; 
  margin-top: 0; /* 去掉顶部 margin，紧贴文字 */
  margin-bottom: 30rpx;
}

.btn-primary {
  flex: 1;
  height: 80rpx; /* 按钮变矮一点 */
  background: #000;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  letter-spacing: 2rpx;
  border-radius: 4rpx;
}

.btn-ghost {
  width: 100rpx;
  height: 75rpx;
  border: 1px solid #000;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  border-radius: 4rpx;
}

.icp-area {
  padding-top: 20rpx;
  border-top: 1px solid rgba(0,0,0,0.06);
}

.icp-text {
  display: block;
  font-size: 16rpx; /* 更精致的小字 */
  color: #ccc;      
  line-height: 1.4;
  letter-spacing: 1px;
}