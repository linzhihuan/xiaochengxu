<view class="container safe-bottom">
  <!-- 1. 顶部固定标题区 -->
  <view class="nav-header" style="padding-top:{{statusBarHeight}}px">
    <text class="nav-title font-serif">Life LAB.</text>
    <text class="nav-subtitle">生活实验室 · Extend your moments.</text>
  </view>

  <!-- 2. 滚动产品列表 -->
  <scroll-view scroll-y class="shop-scroll">
    <view class="product-grid">
      
      <!-- 遍历产品列表 -->
      <view class="product-card fade-in-up" 
            wx:for="{{products}}" wx:key="id" 
            style="animation-delay: {{index * 0.1}}s"
            bindtap="goCustomize" 
            data-id="{{item.id}}">
        
        <view class="card-img-box">
          <image src="{{item.cover}}" mode="aspectFit" class="card-img"></image>
          <view class="badge" wx:if="{{item.tag}}">{{item.tag}}</view>
        </view>
        
        <view class="card-info">
          <text class="p-name">{{item.name}}</text>
          <text class="p-desc">{{item.desc}}</text>
          <view class="p-bottom">
            <text class="p-price">¥{{item.price}}</text>
            <view class="btn-arrow">→</view>
          </view>
        </view>

      </view>

    </view>
    <!-- 底部占位 -->
    <view style="height: 40rpx;"></view>
  </scroll-view>
</view>